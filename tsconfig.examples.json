{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.jsonc",
    "include": ["examples"],
    "references": [{ "path": "./tsconfig.src.json" }],
    "compilerOptions": {
        "tsBuildInfoFile": ".tsbuildinfo/examples.tsbuildinfo",
        "outDir": ".tsbuildinfo/examples",
        "noEmit": true,
        "erasableSyntaxOnly": false,
        "baseUrl": ".",
        "paths": {
            "the-moby-effect": ["src/index.ts"],
            "the-moby-effect/*": ["src/*.ts"]
        },
        "types": ["node"]
    }
}
